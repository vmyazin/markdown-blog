ul.article-list.featured.list-unstyled.justify-content-between
  each article, ind in articles
    if ind < 2
      li.featured
        a.d-flex(href="/blog/" + article.slug)
          p.img-gradient
            img(src=article.image, alt=article.description)
          .text
            h3.heading(title=article.title)
              =article.title
            small.meta.text-nowrap
              b=article.author
            p= article.description